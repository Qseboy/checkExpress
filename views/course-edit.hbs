<h1>{{title}}</h1>
<form action="/courses/edit" method="post" class="course-form">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
          <label for="title">Название курса</label>
          <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
          <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required min="1" >
          <label for="price">Цена курса</label>
          <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
          <input id="image" name="image" type="text" class="validate" value="{{course.image}}" required>
          <label for="image">URl картинки</label>
          <span class="helper-text" data-error="Введите url картинки"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Редактировать курс</button>

</form>

{{!-- С методом Post отправляется объект с name:value, который лежит в req.body --}}
<form action="/courses/remove" method="POST">
{{!-- Нужен для того чтобы передавать в req.body.id текущий id курса который надо удалить --}}
      <input type="hidden" name="id" value="{{course.id}}"> 
      <button class="btn red">Удалить курс</button>
</form>